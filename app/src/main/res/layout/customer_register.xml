<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Customer_Register">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:id="@+id/v_topview"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:background="#18a3fe"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/imgLogo"
                    android:layout_width="match_parent"
                    android:layout_height="155dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ebts_name_logo" />

                <View
                    android:id="@+id/v_wave1"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:background="@drawable/wave"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/v_topview" />

                <ImageView
                    android:id="@+id/imgLoginLogo"
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="175dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="175dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/v_wave1"
                    app:srcCompat="@drawable/ic_registerplus"
                    app:tint="#18a3fe" />

                <TextView
                    android:id="@+id/lbl_register"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="159dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="159dp"
                    android:text="Register"
                    android:textColor="#18a3fe"
                    android:textSize="25sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/v_splitter" />

                <View
                    android:id="@+id/v_splitter"
                    android:layout_width="150dp"
                    android:layout_height="2dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="55dp"
                    android:background="#18a3fe"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/v_wave1" />

                <View
                    android:id="@+id/v_splitter1"
                    android:layout_width="150dp"
                    android:layout_height="2dp"
                    android:layout_marginTop="55dp"
                    android:layout_marginEnd="15dp"
                    android:background="#18a3fe"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/v_wave1" />


                <EditText
                    android:id="@+id/et_username"
                    android:layout_width="360dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="25dp"
                    android:backgroundTint="#F1E023"
                    android:drawableStart="@drawable/ic_user"
                    android:drawablePadding="5dp"
                    android:drawableTint="#F1E023"
                    android:ems="10"
                    android:fontFamily="sans-serif"
                    android:hint="User Name"
                    android:inputType="textPersonName"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/lbl_register" />

                <EditText
                    android:id="@+id/et_fullName"
                    android:layout_width="360dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="25dp"
                    android:backgroundTint="#F1E023"
                    android:drawableStart="@drawable/ic_name"
                    android:drawablePadding="5dp"
                    android:drawableTint="#F1E023"
                    android:ems="10"
                    android:fontFamily="sans-serif"
                    android:hint="Full Name"
                    android:inputType="textPersonName"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/et_username" />

                <EditText
                    android:id="@+id/et_phone"
                    android:layout_width="360dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="25dp"
                    android:backgroundTint="#F1E023"
                    android:drawableStart="@drawable/ic_phone"
                    android:drawablePadding="5dp"
                    android:drawableTint="#F1E023"
                    android:ems="10"
                    android:fontFamily="sans-serif"
                    android:hint="Phone Number"
                    android:inputType="number"
                    android:maxLength="11"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/et_fullName" />

                <EditText
                    android:id="@+id/et_email"
                    android:layout_width="360dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="25dp"
                    android:backgroundTint="#F1E023"
                    android:drawableStart="@drawable/ic_email"
                    android:drawablePadding="5dp"
                    android:drawableTint="#F1E023"
                    android:ems="10"
                    android:fontFamily="sans-serif"
                    android:hint="Email Address"
                    android:inputType="textPersonName"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/et_phone" />

                <EditText
                    android:id="@+id/et_newPassword"
                    android:layout_width="360dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="25dp"
                    android:backgroundTint="#F1E023"
                    android:drawableStart="@drawable/ic_pass"
                    android:drawablePadding="5dp"
                    android:drawableTint="#F1E023"
                    android:ems="10"
                    android:hint="Password"
                    android:inputType="textPassword"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/et_email" />

                <EditText
                    android:id="@+id/et_confirmPassword"
                    android:layout_width="360dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="25dp"
                    android:backgroundTint="#F1E023"
                    android:drawableStart="@drawable/ic_password"
                    android:drawablePadding="5dp"
                    android:drawableTint="#F1E023"
                    android:ems="10"
                    android:hint="Confirm Password"
                    android:inputType="textPassword"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/et_newPassword" />

                <ProgressBar
                    android:id="@+id/progressBar"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/et_confirmPassword" />

                <Button
                    android:id="@+id/btnRegister"
                    android:layout_width="360dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="25dp"
                    android:layout_marginBottom="5dp"
                    android:backgroundTint="#18a3fe"
                    android:drawableLeft="@drawable/ic_register"
                    android:drawableTint="#FFFFFF"
                    android:text="Register"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.493"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/progressBar" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>

